extends layout

block content
  br
  
  h2 Import CSV file using NodeJs and MongoDB
  
  br
  
  p
    a(href='javascript:void(0)' class='btn btn-primary' id='importdata') Import CSV
    | &nbsp;&nbsp;&nbsp;
    a(href='javascript:void(0)' class='btn btn-primary' id='fetchdata') Fetch Data

  br

  form(method='POST' action='/import2' enctype='multipart/form-data' id='import-form')
    div.form-group
      //- label(for='email') Choose Csv File
      input.form-control(type='file' id='csvfile' placeholder='csvfile' name='csvfile' style='display:none')
    //- button.btn.btn-primary(type='submit') Import

  p#message.alert.alert-success(style='display:none')

  br

  table.table.table-bordered
    thead
      tr
        th #
        th Product ID
        th Product Name
        th Price
        th Category
        th Manufacturer
    tbody#trdata
      tr
        td(colspan='3') Click on <strong>Import CSV</strong> button to import and save data to MongoDB. <br />Click on <strong>Fetch Data</strong> button to display data from database 
                                